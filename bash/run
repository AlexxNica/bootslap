#
# functions needed to run this
#
source ~/.dothome/bash/functions.sh

#
# get hostname and os
# 
hostos=`uname`
hostname=`hostname -s`
if [ "$hostos" == "darwin" ]; then hostname=`scutil --get LocalHostName`; fi

# source host specific scripts
source_if_exists ~/.dothome/bash/host/${hostname}.sh

# source OS specific scripts
source_if_exists ~/.dothome/bash/os/${hostos}.sh

#
# source git completion from homebrew git install (always brew install git!)
#
source_if_exists /usr/local/etc/bash_completion.d/git-completion.bash

#
# load RVM (assuming a user-scoped install)
#
[[ -s "$HOME/.rvm/scripts/rvm" ]] && . "$HOME/.rvm/scripts/rvm" 

#convenience 
source ~/.dothome/bash/aliases.sh
source ~/.dothome/bash/settings.sh
source ~/.dothome/bash/gitprompt.sh

